<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pc.bagsshoes">

    <application
        android:name=".bagsshoes.bagsshoes.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".bagsshoes.bagsshoes.ui.CheckoutActivity"></activity>
        <activity android:name=".bagsshoes.bagsshoes.ui.HostActivity" />
        <activity android:name=".bagsshoes.bagsshoes.ui.StoreActivity" />
        <activity
            android:name=".bagsshoes.bagsshoes.ui.CartActivity"
            android:label="@string/cart_activity" />
        <activity
            android:name=".bagsshoes.bagsshoes.ui.FavoritesActivity"
            android:label="@string/favorites_activity" />
        <activity
            android:name=".bagsshoes.bagsshoes.ui.ProductActivity"
            android:label="@string/detail_activity" />
        <activity
            android:name=".bagsshoes.bagsshoes.ui.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".bagsshoes.bagsshoes.ui.SignupActivity" />
        <activity android:name=".bagsshoes.bagsshoes.ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>